<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:viewModel="clr-namespace:HandsAndVoices.ViewModels"
             x:Class="HandsAndVoices.Views.Article.ArticleListPage"
             xmlns:ff="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             Title="Articles">
    
    <ContentPage.BindingContext>
        <viewModel:SectionViewModel/>
    </ContentPage.BindingContext>

    <Grid>
        <skia:SKCanvasView x:Name="SKCanvas" PaintSurface="SKCanvas_PaintSurface"/>
        <Image Source="background"
               IsVisible="{DynamicResource IsVisible}"
               Aspect="Fill"
               VerticalOptions="CenterAndExpand"
               Opacity=".9"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <CollectionView
                            ItemsSource="{Binding ArticleList}"
                            Margin="10,0,10,0"
                            VerticalScrollBarVisibility="Never">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" 
                                     SnapPointsAlignment="Center"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10,20,10,0">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer
                                             Command="{Binding 
                                                Source={RelativeSource 
                                                AncestorType={x:Type viewModel:SectionViewModel}}, 
                                                Path=PushCommand}"
                                             CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>
                            <ff:CachedImage Source="{Binding ArticleImage}" Aspect="AspectFit"/>
                            <pancake:PancakeView
                                        IsVisible="{Binding IsVisible}"
                                        BackgroundColor="#1C1C6E"
                                        CornerRadius="6"
                                        HeightRequest="22"
                                        WidthRequest="45"
                                        TranslationX="15"
                                        TranslationY="-9"
                                        HorizontalOptions="Start"
                                        VerticalOptions="Start">
                                
                                <Label Text="{Binding DayString}" 
                                       IsVisible="{Binding IsVisible}"
                                       TextColor="White" 
                                       FontSize="11"
                                       VerticalOptions="Center" 
                                       HorizontalOptions="Center"
                                       FontAttributes="Bold"/>
                                
                            </pancake:PancakeView>

                            <pancake:PancakeView VerticalOptions="End"
                                                 HorizontalOptions="CenterAndExpand"
                                                 BackgroundColor="Black"
                                                 WidthRequest="160"
                                                 Opacity=".6"
                                                 TranslationY="-4"
                                                 HeightRequest="25"
                                                 CornerRadius="5">
                            </pancake:PancakeView>
                            <Label Text="{Binding Topic}" 
                                   FontSize="12"
                                   TextColor="White" 
                                   HorizontalTextAlignment="Start"
                                   VerticalTextAlignment="End"
                                   FontAttributes="Bold"
                                   TranslationY="-8"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>